# Application Configuration
NODE_ENV=production
PORT=3000

# GitHub Configuration (Required)
GITHUB_TOKEN=your_github_token
NEXT_PUBLIC_GITHUB_TOKEN=your_github_token
NEXT_PUBLIC_GITHUB_OWNER=your_github_username_or_organization

# AI Model Configuration (Required - At least one model must be configured)
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Database Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Real-time Configuration (Required)
NEXT_PUBLIC_ABLY_API_KEY=your_ably_api_key

# Docker-specific Configuration
DOCKER_HEALTHCHECK_ENDPOINT=/api/health